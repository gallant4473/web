<br><br>
<div class="jumbotron">
<div class="container well" style="color:black; text-align:left;">

  <strong>App Name:</strong>
  <%= @app.title %>  


<p>
  <strong>Blog link:</strong>
  <%= @app.blog_link %>
</p>

<p>
  <strong>Job link:</strong>
  <%= @app.job_link %>
</p>

<p>
  <strong>Description:</strong>
  <%= @app.description %>
</p>

<p>
  <strong>Author:</strong>
  <%= @app.author %>
</p>

<p>
  <strong>Status:</strong>
  <%= @app.status %>
</p>
<p>
  <div class="btn-group">
  <%= link_to like_app_path(@app), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-up"></span>
    Upvote
    <%= @app.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_app_path(@app), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-down"></span>
    Downvote
    <%= @app.get_downvotes.size %>
  <% end %>
</div>
</p>

<%= link_to 'Edit', edit_app_path(@app) %> |
<%= link_to 'Back', apps_path %>
</div>
<div class="container">
<h3 class="comments_title">
  <%= @app.comments.count %> Comments
</h3>

<div id="comments">
  <%= render :partial => @app.comments %>
</div>
<%= simple_form_for [@app, Comment.new] do |f| %>
  <div class="field">
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <br>
  <%= f.submit "Add Comment", class: "btn btn-primary" %>
<% end %>

</div>
</div>